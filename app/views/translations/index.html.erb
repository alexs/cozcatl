<h2>Listado de traducciones</h2>
<p>
<%= link_to(raw("  <i class='icon-plus-sign'> </i> Agregar una traducción"),new_translation_path,{:class => 'btn btn-success btn-medium'})  %>
</p>
<br />
<table class="table table-striped table-bordered">
  <tr>
    <th>Palabra o frase original en fichero</th>
    <th>Traducción</th>
    <th colspan="3">Acciones</th>
  </tr>

<% @translations.each do |translation| %>
  <tr>
    <td><%= translation.original %></td>
    <td><%= translation.translate %></td>
    <td> <%= link_to 'Ver', translation %></td>
    <td> <%= link_to 'Modificar', edit_translation_path(translation) %></td>
    <td> <%= link_to 'Eliminar', translation, method: :delete, data: { confirm: 'Estas seguro de eliminar?' } %></td>
  </tr>
<% end %>
</table>
 <br />
<%= link_to(raw("  <i class='icon-plus-sign'> </i> Agregar una traducción"),new_translation_path,{:class => 'btn btn-success btn-medium'})  %>
